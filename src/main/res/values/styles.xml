<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.MedicalLocator.ActionBarOverlay" parent="style/Theme.Sherlock">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Widget.MedicalLocator.ActionBarStyle</item>
        <item name="actionBarStyle">@style/Widget.MedicalLocator.ActionBarStyle</item>
    </style>

    <style name="Theme.MedicalLocator" parent="style/Theme.Sherlock">
    </style>

    <style name="Theme.MedicalLocator.Light" parent="style/Theme.Sherlock.Light">
    </style>

    <style name="Widget.MedicalLocator.ActionBarStyle" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">#8f000000</item>
        <item name="background">#8f000000</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_height">40dip</item>
    </style>
    
	<style name="ImageButton">
        <item name="android:padding">5dip</item>
    </style>

    <style name="DialogText">
		<item name="android:textColor">@color/dialog_text</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItem">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

    <style name="SlidingSpinnerButtonStyle">
        <item name="android:background">@drawable/abs__spinner_ab_holo_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FacilityDialogTitleStyle" parent="android:TextAppearance.DialogWindowTitle">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
